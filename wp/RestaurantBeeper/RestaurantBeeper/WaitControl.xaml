<UserControl x:Class="RestaurantBeeper.WaitControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <ProgressBar Height="10" Margin="14,394,-14,396" Width="480" IsIndeterminate="True" />
        <TextBlock HorizontalAlignment="Left" Margin="62,348,0,0" TextWrapping="Wrap" Text="Hang on, we're getting things ready for you" VerticalAlignment="Top" TextAlignment="Center" />
    </Grid>
</UserControl>